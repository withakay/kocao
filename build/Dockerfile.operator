FROM golang:1.25-alpine AS build

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -trimpath -o /out/control-plane-operator ./cmd/control-plane-operator

FROM gcr.io/distroless/static:nonroot
WORKDIR /
COPY --from=build /out/control-plane-operator /control-plane-operator
USER 65532:65532
ENTRYPOINT ["/control-plane-operator"]
