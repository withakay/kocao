FROM golang:1.23-alpine AS build

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -trimpath -o /out/control-plane-api ./cmd/control-plane-api

FROM gcr.io/distroless/static:nonroot
WORKDIR /
COPY --from=build /out/control-plane-api /control-plane-api
USER 65532:65532
EXPOSE 8080
ENTRYPOINT ["/control-plane-api"]
