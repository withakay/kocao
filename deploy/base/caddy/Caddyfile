{
	admin off
	auto_https off
}

:8081 {
	@attachws {
		path_regexp attach ^/api/v1/workspace-sessions/[^/]+/attach$
		header Connection *Upgrade*
		header Upgrade websocket
	}
	reverse_proxy @attachws 127.0.0.1:8080

	@api path /api/v1/* /openapi.json /healthz /readyz
	reverse_proxy @api 127.0.0.1:8080

	@scalar path /scalar
	rewrite @scalar /scalar.html

	@root path /
	rewrite @root /index.html

	root * /srv
	file_server
}
